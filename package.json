{
  "name": "convert-files",
  "version": "1.0.0",
  "description": "Conversor de arquivo offline",
  "main": "./out/main/index.js",
  "author": "Thales Augusto <thalesaugusto3@icloud.com>",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "Conversor de Arquivo",
    "copyright": "Copyright Â© 2024 - ${author}",
    "files": [
      "build//*",
      "node_modules/**/*"
    ],
    "extends": "react-cra",
    "directories": {
      "buildResources": "public"
    },
    "artifactName": "convert-file${version}-${os}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "ThalesAugusto0",
        "repo": "convert-files",
        "token": "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",
        "private": true
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./resources/icon.png"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.407.0",
    "next-themes": "^0.3.0",
    "pdf-lib": "^1.17.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "postcss": "^8.4.39",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
